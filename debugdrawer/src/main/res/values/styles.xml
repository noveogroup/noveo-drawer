<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoveoDebugDrawer"/>

    <style name="NoveoDebugDrawer.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/dd_url_selector</item>
        <item name="android:textSize">@dimen/dd_normal</item>
        <item name="android:paddingTop">@dimen/dd_selector_padding</item>
        <item name="android:paddingBottom">@dimen/dd_selector_padding</item>
    </style>

    <style name="NoveoDebugDrawer.Text.Spinner">
        <item name="android:paddingTop">@dimen/dd_small</item>
        <item name="android:paddingBottom">@dimen/dd_small</item>
        <item name="android:paddingLeft">@dimen/dd_large</item>
        <item name="android:paddingRight">@dimen/dd_large</item>
    </style>

    <style name="NoveoDebugDrawer.Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:divider">@color/dd_divider</item>
        <item name="android:dividerHeight">@dimen/dd_divider_height</item>
    </style>

</resources>