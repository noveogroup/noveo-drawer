<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:padding="@dimen/dd_tiny"
    tools:background="@android:color/background_dark"
    tools:ignore="UselessParent,HardcodedText">

    <TextView
        style="@style/Widget.DebugDrawer.Base.Header"
        android:layout_width="0dp"
        android:layout_columnSpan="2"
        android:layout_gravity="start|fill_horizontal"
        android:text="Debug Tools"/>

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="Stetho"/>

    <Switch
        android:id="@+id/dd_debug_tools_switch_stetho"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="wrap_content"
        android:layout_gravity="start|center_vertical"/>

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="Leak Canary"/>

    <Switch
        android:id="@+id/dd_debug_tools_switch_leak_canary"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="wrap_content"
        android:layout_gravity="start|center_vertical"/>

</GridLayout>
